@model namasdev.Web.JS.Sample.Models.ControlContainer
<div @{if (!string.IsNullOrWhiteSpace(Model.Id)){<text>id="@Model.Id"</text>}} class="card h-100 control-container @Model.CssClass">
    <div class="card-body">
        @if (!string.IsNullOrWhiteSpace(Model.Title))
        {
            <span class="card-title font-weight-bold">@Model.Title</span>
        }
        @if (Model.PreMainHtml != null)
        {
            @Model.PreMainHtml(null);
        }
        <div class="mt-2">
            @Model.MainHtml(null)
        </div>
        @if (Model.PostMainHtml != null)
        {
            @Model.PostMainHtml(null);
        }
    </div>
</div>