    <div class="card">
        <div class="card-header p-0">
            <button class="btn btn-block text-left" type="button" data-toggle="collapse" data-target="#initAutopostback">
                initAutopostback
            </button>
        </div>
        <div id="initAutopostback" class="collapse">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <form id="form3" action="UIControls" method="get">
                            <div class="form-group">
                                <label for="text3">Text</label>
                                <input id="text3" name="text3" type="text" value="@Request["text3"]" class="form-control autopostback" />
                            </div>
                            <div class="form-group">
                                <label for="text3">Text area</label>
                                <textarea id="textArea3" name="textArea3" class="form-control autopostback">@Request["textArea3"]</textarea>
                            </div>
                            <div class="form-group form-check">
                                <input id="check3" name="check3" type="checkbox" class="form-check-input autopostback" @{ if (Request["check3"] != null) { <text> checked</text> }}>
                                <label class="form-check-label" for="check3">Check</label>
                            </div>
                            <div class="form-group form-radio">
                                <input id="radio3" name="radio3" type="radio" class="form-radio-input autopostback" @{ if (Request["radio3"] != null) { <text> checked</text> }}>
                                <label class="form-radio-label" for="radio3">Radio</label>
                            </div>
                            <div class="form-group">
                                <div class="custom-file">
                                    <input id="file3" name="file3" type="file" class="custom-file-input autopostback">
                                    <label class="custom-file-label" for="file3"></label>
                                    @if (Request["file3"] != null)
                                    {<span>@Request["file3"]</span>}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="select3">Select</label>
                                <select id="select3" name="select3" class="form-control autopostback">
                                    <option></option>
                                    <option value="a" @{ if (Request["select3"] == "a") { <text> selected</text> }}>A</option>
                                    <option value="b" @{ if (Request["select3"] == "b") { <text> selected</text> }}>B</option>
                                </select>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
