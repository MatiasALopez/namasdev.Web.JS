<h1>UI Controls</h1>

<div>
    <div class="card">
        <div class="card-header p-0">
            <button class="btn btn-block text-left" type="button" data-toggle="collapse" data-target="#clearControls">clearControls</button>
        </div>
        <div id="clearControls" class="collapse">
            <div class="card-body">
                <h6>Single form</h6>
                <div class="row">
                    <div class="col-sm-6">
                        <form id="form1">
                            <input type="hidden" value="hidden" />
                            <div class="form-group">
                                <label for="text1">Text</label>
                                <input id="text1" type="text" value="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="password1">Password</label>
                                <input id="password1" type="password" value="password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="text1">Text area</label>
                                <textarea id="textArea1" class="form-control">text</textarea>
                            </div>
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="check1" checked>
                                <label class="form-check-label" for="check1">Check</label>
                            </div>
                            <div class="form-group form-radio">
                                <input type="radio" class="form-radio-input" id="radio1" checked>
                                <label class="form-radio-label" for="radio1">Radio</label>
                            </div>
                            <div class="form-group">
                                <div class="custom-file">
                                    <input type="file" id="file1" class="custom-file-input">
                                    <label class="custom-file-label" for="file1"></label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="select1">Select</label>
                                <select id="select1" class="form-control">
                                    <option>A</option>
                                    <option selected>B</option>
                                </select>
                            </div>
                            <button id="btnClear1" class="btn btn-primary">Clear</button>
                        </form>
                    </div>
                </div>
                <script type="text/javascript">
                    $('#btnClear1').on('click', function (ev) {
                        ev.preventDefault();
                        nmd.ui.controls.clearControls('#form1 input,#form1 textarea,#file1,#select1');
                        return false;
                    });
                </script>

