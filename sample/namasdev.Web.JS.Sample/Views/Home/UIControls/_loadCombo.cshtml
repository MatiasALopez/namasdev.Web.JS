@using namasdev.Web.JS.Sample.Models;
<div>
    <div class="form-row">
        <div class="col-lg-4 col-md-6 mb-3">
            @Html.Partial("_ControlContainer", new ControlContainer
            {
                Title = "Combo (default)",
                MainHtml = @<text>
                    <div class="form-group">
                        <select id="ddlLC1" class="form-control"></select>
                    </div>
                </text>
            })
        </div>
        <div class="col-lg-4 col-md-6 mb-3">
            @Html.Partial("_ControlContainer", new ControlContainer
            {
                Title = "Combo (custom)",
                MainHtml = @<text>
                    <div class="form-group">
                        <select id="ddlLC2" class="form-control"></select>
                        <small class="text-muted">Empty option text, custom properties, selected value</small>
                    </div>
                </text>,
            })
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-4 col-md-6 mb-3">
            @Html.Partial("_ControlContainer", new ControlContainer
            {
                Title = "Combo selectpicker",
                MainHtml = @<text>
                    <div class="form-group">
                        <select id="ddlLC3" class="form-control selectpicker"></select>
                    </div>
                </text>
            })
        </div>
    </div>
    <div class="form-row">
         <div class="col-lg-4 col-md-6 mb-3">
             @Html.Partial("_ControlContainer", new ControlContainer
             {
                 Title = "Combo multiselect (default)",
                 MainHtml = @<text>
                    <div class="form-group">
                        <select id="ddlLC4" class="form-control multiselect" multiple></select>
                    </div>
                 </text>
             })
         </div>
         <div class="col-lg-4 col-md-6 mb-3">
             @Html.Partial("_ControlContainer", new ControlContainer
             {
                 Title = "Combo multiselect (custom)",
                 MainHtml = @<text>
                    <div class="form-group">
                        <select id="ddlLC5" class="form-control multiselect" multiple></select>
                        <small class="text-muted">Select all</small>
                    </div>
                 </text>,
             })
         </div>
    </div>
</div>
