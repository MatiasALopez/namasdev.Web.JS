@using namasdev.Web.JS.Sample.Models;
<div>
    <div class="form-row">
        <div class="col-lg-4 col-md-6 mb-3">
            @Html.Partial("_ComboControlContainer", new ControlContainer
            {
                Title = "Combo (default)",
                MainHtml = @<text>
                    <div class="form-group">
                        <select id="ddlLCADef" class="form-control"></select>
                    </div>
                </text>
            })
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-4 col-md-6 mb-3">
            @Html.Partial("_ComboControlContainer", new ControlContainer
            {
                Title = "Combo (custom 1)",
                MainHtml = @<text>
                    <div class="form-group">
                        <select id="ddlLCACus1" class="form-control"></select>
                        <small class="text-muted">Loading full, ajax custom properties</small>
                    </div>
                </text> ,
            })
        </div>
        <div class="col-lg-4 col-md-6 mb-3">
            @Html.Partial("_ComboControlContainer", new ControlContainer
            {
                Id = "divLCACus2",
                Title = "Combo (custom 2)",
                MainHtml = @<text>
                    <div class="form-group">
                        <select id="ddlLCACus2" class="form-control"></select>
                        <small class="text-muted">Loading scoped, itemsAddedCallback, selected value</small>
                    </div>
                </text> ,
            })
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-4 col-md-6 mb-3">
            @Html.Partial("_ComboControlContainer", new ControlContainer
            {
                Title = "Combo selectpicker (default)",
                MainHtml = @<text>
                    <div class="form-group">
                        <select id="ddlLCASPDef" class="form-control selectpicker"></select>
                    </div>
                </text>,
            })
        </div>
        <div class="col-lg-4 col-md-6 mb-3">
            @Html.Partial("_ComboControlContainer", new ControlContainer
            {
                Id = "divLCASPCus",
                Title = "Combo selectpicker (custom)",
                MainHtml = @<text>
                    <div class="form-group">
                        <select id="ddlLCASPCus" class="form-control selectpicker"></select>
                        <small class="text-muted">Loading scoped, selected value</small>
                    </div>
                </text>,
            })
        </div>
    </div>
    <div class="form-row">
         <div class="col-lg-4 col-md-6 mb-3">
             @Html.Partial("_ComboControlContainer", new ControlContainer
             {
                 Title = "Combo multiselect (default)",
                 MainHtml = @<text>
                    <div class="form-group">
                        <select id="ddlLCAMSDef" class="form-control multiselect" multiple></select>
                    </div>
                 </text>,
             })
         </div>
         <div class="col-lg-4 col-md-6 mb-3">
             @Html.Partial("_ComboControlContainer", new ControlContainer
             {
                Id= "divLCAMSCus",
                Title = "Combo multiselect (custom)",
                MainHtml = @<text>
                    <div class="form-group">
                        <select id="ddlLCAMSCus" class="form-control multiselect" multiple></select>
                        <small class="text-muted">Loading scoped, select all</small>
                    </div>
                </text>,
             })
         </div>
     </div>
