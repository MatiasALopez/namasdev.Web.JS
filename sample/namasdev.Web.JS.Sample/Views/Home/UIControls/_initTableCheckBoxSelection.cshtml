@using namasdev.Web.JS.Sample.Models;
<div>
    <div class="row">
        <div class="col-lg-5 col-md-6 mb-3">
            @Html.Partial("_ControlContainer", new ControlContainer
            {
                Title = "Default table selector",
                MainHtml = @<text>
                    <div class="table-responsive">
                        <table class="table table-bordered checkbox-selection">
                            <thead>
                                <tr>
                                    <th>
                                        <input type="checkbox" />
                                    </th>
                                    <th>Col A</th>
                                    <th>Col B</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <input type="checkbox" />
                                    </td>
                                    <td>Val A1</td>
                                    <td>Val B1</td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" />
                                    </td>
                                    <td>Val A2</td>
                                    <td>Val B2</td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" />
                                    </td>
                                    <td>Val A3</td>
                                    <td>Val B3</td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" />
