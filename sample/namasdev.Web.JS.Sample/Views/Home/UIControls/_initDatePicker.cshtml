@using namasdev.Web.JS.Sample.Models;
<div>
    <div class="form-row">
        <div class="col-lg-4 col-md-6 mb-3">
            @Html.Partial("_ControlContainer", new ControlContainer
            {
                Title = "Datepicker (default selector)",
                MainHtml = @<text>
                    <div class="form-group">
                        <input type="text" id="txtDP1" class="form-control datepicker" />
                    </div>
                </text>
            })
        </div>
        <div class="col-lg-4 col-md-6 mb-3">
            @Html.Partial("_ControlContainer", new ControlContainer
            {
                Title = "Datepicker (custom selector and options)",
                MainHtml = @<text>
                    <div class="form-group">
                        <input type="text" id="txtDP2" class="form-control" />
                    </div>
                </text>
            })
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        nmd.ui.controls.initDatePicker('#txtDP2', {
            format: 'dd/mm/yyyy',
            language: 'es',
        });
    });
</script>