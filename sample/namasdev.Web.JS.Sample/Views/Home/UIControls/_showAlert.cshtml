<div class="row">
    <div class="col-sm-6">
        <div id="alertControl1" style="display: none;"></div>
        <div id="alertControl2" style="display: none;"></div>
        <div class="mt-2">
            <div class="btn-group">
                <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                    Show one
                </button>
                <div class="dropdown-menu">
                    <button id="btnShowAlertOneInfo" class="dropdown-item">Info</button>
                    <button id="btnShowAlertOneSuccess" class="dropdown-item">Success</button>
                    <button id="btnShowAlertOneWarning" class="dropdown-item">Warning</button>
                    <button id="btnShowAlertOneDanger" class="dropdown-item">Danger</button>
                </div>
            </div>
            <div class="btn-group">
                <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                    Show multiple
                </button>
                <div class="dropdown-menu">
                    <button id="btnShowAlertMultipleInfo" class="dropdown-item">Info</button>
                    <button id="btnShowAlertMultipleSuccess" class="dropdown-item">Success</button>
                    <button id="btnShowAlertMultipleWarning" class="dropdown-item">Warning</button>
                    <button id="btnShowAlertMultipleDanger" class="dropdown-item">Danger</button>
                </div>
            </div>
            <button id="btnHideAlertOne" class="btn btn-secondary">Hide one</button>
            <button id="btnHideAlertMultiple" class="btn btn-secondary">Hide multiple</button>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('#btnShowAlertOneInfo').on('click', function () {
        nmd.ui.controls.showAlert('#alertControl1', 'This is an info alert', 'info');
    });
    $('#btnShowAlertOneSuccess').on('click', function () {
        nmd.ui.controls.showAlert('#alertControl1', 'This is a success alert', 'success');
    });
    $('#btnShowAlertOneWarning').on('click', function () {
        nmd.ui.controls.showAlert('#alertControl1', 'This is a warning alert', 'warning');
    });
    $('#btnShowAlertOneDanger').on('click', function () {
        nmd.ui.controls.showAlert('#alertControl1', 'This is a danger alert', 'danger');
    });

    $('#btnShowAlertMultipleInfo').on('click', function () {
        nmd.ui.controls.showAlert('#alertControl1,#alertControl2', 'This is an info alert', 'info');
    });
    $('#btnShowAlertMultipleSuccess').on('click', function () {
        nmd.ui.controls.showAlert('#alertControl1,#alertControl2', 'This is a success alert', 'success');
    });
    $('#btnShowAlertMultipleWarning').on('click', function () {
        nmd.ui.controls.showAlert('#alertControl1,#alertControl2', 'This is a warning alert', 'warning');
    });
    $('#btnShowAlertMultipleDanger').on('click', function () {
        nmd.ui.controls.showAlert('#alertControl1,#alertControl2', 'This is a danger alert', 'danger');
    });

    $('#btnHideAlertOne').on('click', function () {
        nmd.ui.controls.hideAlert('#alertControl1');
    });
    $('#btnHideAlertMultiple').on('click', function () {
        nmd.ui.controls.hideAlert('#alertControl1,#alertControl2');
    });
</script>