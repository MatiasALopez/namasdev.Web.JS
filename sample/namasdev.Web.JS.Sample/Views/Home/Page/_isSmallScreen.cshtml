<div>
    <p>Resize window to 767px or less to check positive for small screen.</p>
    <button id="btnCheckSmallScreen" type="button" class="btn btn-primary">Check</button>
    <p id="pSS" class="mt-3" style="display: none;"></p>
</div>
<script type="text/javascript">
    $(function () {
        $('#btnCheckSmallScreen').on('click', function (ev) {
            ev.preventDefault();

            $('#pSS')
                .text('Is small screen: ' + (nmd.page.isSmallScreen() ? 'Yes' : 'No'))
                .show();

            return false;
        });
    });
</script>